<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation=" http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

	<!-- camelContext設定內容 -->
	<camelContext id="camel"
		xmlns="http://camel.apache.org/schema/spring">

		<threadPoolProfile id="defaultThreadPoolProfile"
			defaultProfile="true" poolSize="50" maxPoolSize="200"
			maxQueueSize="1000" allowCoreThreadTimeOut="false"
			rejectedPolicy="CallerRuns" />

		<restConfiguration scheme="http" component="restlet"
			contextPath="/test" port="8080" enableCORS="true">
		</restConfiguration>
		<!-- 第一區 -->
		<rest id="angus01AppApi" produces="application/json">
			<post id="angus01App" uri="/angus01app">
				<description>helloWord!!</description>
				<to uri="direct:angus01App" />
			</post>
		</rest>
		<!-- 第二區 -->
		<route>
			<from id="angus01AppFrom" uri="direct:angus01App" />
			<bean id="angus01AppBean" ref="angus01AppService"
				method="helloWord" />
		</route>
	</camelContext>
	<!-- 第三區：指到實作Impl -->
	<bean id="angus01AppService"
		class="idv.example.demo.service.impl.Angus01AppServiceImpl" />
</beans>